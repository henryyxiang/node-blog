<% include head %>
    <div class="container-fluid my-3">
      <div class="row">
        <main class="col-12 col-md-9">
          <div class="container">
            <% posts.forEach(function (post, index) { %>
            <article class="row bg-white border-bottom border-light pt-3">
              <h5 class="col-12"><a class="text-body" href="/post/<%= post.id %>"><%= post.title %></a></h5>
              <div class="col-12 text-dark abstract d-none d-sm-block"><%= post.abstract %></div>
              <span class="col-12 text-secondary my-1 date"><%= post.createdAt %></span>
            </article>
            <% }) %>
          </div>
        </main>
        <% include sider %>
      </div>
    </div>
<% include footer %>